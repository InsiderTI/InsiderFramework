{
    "settings":{
        "routeCaseSensitive": false
    },
    "actions": {
        "NotFound": {
            "pack": "sys",
            "controller": "error",
            "route": "/error",
            "method": "notFound",
            "responsecode": 404
        },

        "CriticalError": {
            "pack": "sys",
            "controller": "error",
            "route": "/error",
            "method": "genericError",
            "responsecode": 500
        },

        "NotAuth": {
            "pack": "start",
            "controller": "login",
            "route": "/login",
            "method": "loginpage",
            "responsecode": 401
        }
    }
}